@model G11_Coffee.Models.Order

<div id="report">
    <h1>Invoice</h1>
    <p>Order #: @Model.Id</p>
    <p>Date: @Model.OrderDate.ToString("yyyy-MM-dd")</p>
    <p>Cafe: @Model.Cafe.Name</p>
    <table>
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderDetails)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@((item.Quantity * item.Price).ToString("C"))</td>
                </tr>
            }
        </tbody>
    </table>
    <p>Total Amount: @Model.TotalAmount.ToString("C")</p>
    <button onclick="window.print();" class="btn btn-primary">Print Invoice</button>
</div>